/* use !important to override bootstrap settings */

body {
    font-family: helvetica, arial;
    background-color: #111;
    color: #fff;
    padding-top: 40px;
    padding-left: 10px;
    padding-right: 10px;
}

img {
    opacity: 0.95;
}

img:hover {
    opacity: 1;
}

.btn {
    border: 1px solid;
    background: rgba(0, 0, 0, 0.5);
}

.btn:focus, .btn:hover {
    /* background-color: #08c; */
    /* background-color: rgba(0, 0, 0, 0.8); */
    background-color: #000;
    text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00; /* makes text glow. ff8c00 is orange */
}

.mycontrol {
    font-size: 1.2em;
    font-weight: bold;
    font-family: times;
    background: rgba(0, 0, 0, 0.2);
}

#feedbackSignal {
    color: #ff8c00;
    font-size: 1.5em;
    font-weight: bold;
    font-family: georgia;
    margin: 0px 5px 0px 5px;
}

#feedbackMsg {
    font-size: 1.5em;
    font-weight: bold;
    background: rgba(0, 0, 0, 0.2);
    color: #00BFFF; /* nice blue. 08c is default bootstrap link color */
}

#saved {
    font-size: 0.5em;
    font-weight: bold;
    background: rgba(0, 0, 0, 0.2);
    color: #999;
}

.mycontrol:hover, .mycontrol:focus {
    text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00 !important; /* makes text glow */
    color: #fff;
    text-decoration: none;
}

.mydropdownmenu {
    background: rgba(0, 0, 0, 0.8);
    font-family: times;
}

.mydropdownbutton {
    /* these two lines make empty spaces in link clickable */
    display: inline-block;
    width: 100%;
    color: #fff !important;
    font-weight: bold !important;
    font-size: 1.3em;
}

.mydropdownbutton:hover, .mydropdownbutton:focus {
    color: #fff !important;
    background: rgba(0, 0, 0, 0.2) !important;
    text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00 !important; /* makes text glow */
}

#randomposts {
    margin: 10px;
    padding-top: 40px;
}

.myrandomrow {
    margin-bottom: 20px;
}

.instagram {
    width: 100%;
}

.randompost {
    margin: 5px;
}

a.randompost, a.relatedpost {
    color: #fff;
    text-decoration: none;
}

a.mydropdownbutton {
    text-decoration: none;
}

/* for random posts */

.randompost .posttitle {
    margin-left: -5px; /* spans have a default margin */
}

.posttitle {
    font-size: 2em;
    line-height: 1em;
    font-weight: bold;
    color: #00BFFF; /* nice blue. 08c is default bootstrap link color */
    margin-right: 10px;
    word-wrap: break-word;
}

.postbody {
    font-size: 1.5em;
    font-family: IM Fell English, Special Elite, georgia;
    margin-right: 10px;
    white-space: pre-wrap;
    word-wrap: break-word;
}

.postsubject {
    font-size: 1.7em;
    font-weight: bold;
    color: #888;
    margin-right: 10px;
}

.postdate {
    font-size: 1.5em;
    font-weight: bold;
    color: #888;
}

.mynavbar {
    background: rgba(0, 0, 0, 0.5) !important; /* transparent !important; */
}

.modal#newpostform {
    /* modal margin-left center screen, so -40% means 10% */
    margin: 20% 0 0 -10%;
    width: 60%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

#signupform {
    padding: 10px;
    margin-right: 10px;
    background: rgba(0, 0, 0, 0.8);
}

#signupbutton {
    margin-left: 10px;
}

.modal#aboutmodal {
    /* modal margin-left center screen, so -40% means 10% */
    margin-left: -40%;
    width: 80%;
    background: rgba(0, 0, 0, 0.9);
}

.modal-backdrop {
    background: rgba(0, 0, 0, 0) !important;
}

.myformfooter {
    background: rgba(0, 0, 0, 0) !important;
    border: none;
}

.mylegend {
    font-size: 3em;
    font-weight: bolder;
    color: #fff;
    /* background: rgba(0, 0, 0, 0.2); */
    /* border-bottom: 2px solid; */
    border: none;
}

.mylabel {
    font-size: 1.5em;
    font-weight: bold;
    font-family: times;
    /* background: rgba(0, 0, 0, 0.5); */
}

input {
    font-family: IM Fell English, Special Elite, georgia;
    font-size: 1.5em !important; /* fixing short input height */
    color: #fff !important;
    /* text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00; /\* makes text glow *\/ */
    background: rgba(0, 0, 0, 0.9) !important;
}

textarea {
    font-family: IM Fell English, Special Elite, georgia;
    font-size: 1.5em;
    color: #fff !important;
    /* text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00; /\* makes text glow *\/ */
    background: rgba(0, 0, 0, 0.9) !important;
}

/* changing selection color */
*::selection {
    background: #08c;
}

*::-moz-selection {
    background: #08c;
}

#relatedBox {
    margin: 10px 10px 10px 20px;
}

#newPostForm, #editPostForm {
    margin: 0px 20px 0px 0px;
}

input.postInput, textarea.postInput {
    width: 100%;
    margin: 0px 0px 15px 0px !important;
    float: left;
    border: none !important;
    box-shadow: none !important;
    border-radius: 2px !important;
}

textarea.postInput:focus,
input.postInput:focus {
    background: #000 !important;
    color: #fff !important;
}

/* make it look like there's a grey flap on the inputs. TODO. write
a library for this */

.postInputGrey {
    background: #222 !important;
    color: #222 !important;
}

.postInputBlack {
    background: #000 !important;
    color: #fff !important;
}

button.postInput {
    padding: 10px;
    margin-left: 5px;
    margin-right: 5px;
    border: none;
    border-radius: 2px;
    background: #222;
    color: #fff;
    font-size: 1.5em;
    font-weight: bold;
}

#newPostSubmit, #editPostSubmit, #editPostCancel {
    float: right;
}

#newPostSubmit, #editPostSubmit {
    font-size: 2em;
    padding: 20px 30px 20px 30px;
    /* color: #00BFFF; */
}

#editPostCancel {
    /* color: #ff8c00; */
}

#newPostSubmit:focus,
#editPostSubmit:focus,
#newPostSubmit:hover,
#editPostSubmit:hover {
    /* text-shadow: -1px -1px 2px #ff8c00, 1px 1px 2px #ff8c00; /\* makes text glow orange *\/ */
    /* background: #000; */
    background: #ff8c00;
    color: #00bfff;
}

#editPostCancel:focus,
#editPostCancel:hover {
    /* text-shadow: -1px -1px 2px #00BFFF, 1px 1px 2px #00BFFF; /\* makes text glow blue *\/ */
    /* background: #000; */
    background: #00BFFF;
    color: #ff8c00;
}

.placeholder {
    color: #fff !important;
}

.placeholder::-webkit-input-placeholder {
    color: #999 !important;
}

.placeholder:-moz-placeholder { /* ff 18- */
    color: #999 !important;
}

.placeholder::-moz-placeholder { /* ff 19+ */
    color: #999 !important;
}

.placeholder:-ms-input-placeholder {
    color: #999 !important;
}

.shortcuttip {
    float: right;
    margin-right: 20px;
    font-family: Courier, monospace;
    font-size: 0.7em;
}

.tooltip {
    font-weight: bold;
    font-size: 1em;
}

#aboutmodal {
    background: rgba(0, 0, 0, 0.8) !important;
    padding: 50px;
    height: 100%;
}

#aboutmodal.modal-backdrop {
    background: rgba(0, 0, 0, 0.5) !important;
}

#byline {
    font-size: 2em;
    font-weight: bolder;
    line-height: 1em;
}

#byline a {
    color: #ff8c00;
    font-size: 1.4em;
}

#email {
    /* color: #ff8c00; */
    font-size: 1.2em;
}

.smallicon {
    font-size: 0.8em;
}

.highlight {
    /* background-color: #ff8; */
    /* border: 2px dotted #fff; */
    color: #ff8c00;
    font-size: 1.5em;
    font-family: IM Fell English, times;
    font-style: italic;
}

.recentbody {
    /* background-color: #ff8; */
    /* border: 2px dotted #fff; */
    color: #ff8c00;
    /* font-size: 2em; */
    font-family: georgia;
}

#signupmsg {
    margin-top: 10px;
    font-size: 1.5em;
    font-weight: bold;
    line-height: 1em;
    color: #ff8c00;
}

